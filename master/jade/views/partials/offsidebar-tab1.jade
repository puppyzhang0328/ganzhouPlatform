.p(ng-if="!app.layout.horizontal")
    h4.text-muted.text-thin 边角设置
    .clearfix
        p.pull-left 收缩
        .pull-right
            label.switch
                input(type='checkbox', ng-model="app.layout.isCollapsed", ng-disabled="app.layout.isCollapsedText")
                span
    .clearfix
        p.pull-left 收缩侧边菜单
        .pull-right
            label.switch
                input(type='checkbox', ng-model="app.layout.isCollapsedText", ng-disabled="app.layout.isCollapsed")
                span
    .clearfix
        p.pull-left 浮动
        .pull-right
            label.switch
                input(type='checkbox', ng-model="app.layout.isFloat")
                span
    .clearfix
        p.pull-left 漂浮
        .pull-right
            label.switch
                input(type='checkbox', ng-model="app.layout.asideHover")
                span
    .clearfix
        p.pull-left 显示侧滑栏
        .pull-right
            label.switch
                input(type='checkbox', ng-model="app.layout.asideScrollbar")
                span

.p
    h4.text-muted.text-thin 页面切换动画
    select.form-control(ng-model="app.viewAnimation")
        option(value="ng-fadeInUp", selected="selected") 淡入向上
        option(value="ng-fadeInDown") 淡入向下
        option(value="ng-fadeInRight") 淡入向右
        option(value="ng-fadeInLeft") 淡入向左
        option(value="ng-fadeInUpBig") 大幅度淡入向上
        option(value="ng-fadeInDownBig") 大幅度淡入向下
        option(value="ng-fadeInRightBig") 大幅度淡入向右
        option(value="ng-fadeInLeftBig") 大幅度淡入向左
        option(value="ng-fadeIn") 淡入
