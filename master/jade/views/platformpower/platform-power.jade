.panel(ng-controller='platfromPowerController as vm')
    .panel-heading.text-bold 平台权限管理
    .panel-body.newPanel
        table.row-bordered.hover.table-striped.table-responsive(datatable="ng" dt-options="vm.dtOptions" dt-column-defs="vm.dtColumnDefs")
            thead
                tr
                    th 序列号
                    th 平台名字
                    th 平台登录url
                    th 平台用户名
                    th 平台密码
                    th 数据上传接口
                    th 路径
                    th 编辑
            tbody
                tr(ng-repeat="platfromPower in vm.platfromPower track by platfromPower.id")
                    td {{:: platfromPower.id }}
                    td {{:: platfromPower.plateformname }}
                    td {{:: platfromPower.loginurl }}
                    td {{:: platfromPower.username }}
                    td {{:: platfromPower.password }}
                    td {{:: platfromPower.dataurl }}
                    td {{:: platfromPower.param1 }}
                    td
                        button.btn.btn-sm.btn-warning(type='button', ng-click='vm.modifyPlatformPower(platfromPower)') 修改
                            em.fa.fa-edit

        .ui-grid-next
            button.btn.btn-primary.btn-sm(type="button" ng-click="vm.readRecords(0)" id="firstPageBtn") 首页
            button.btn.btn-primary.btn-sm(type="button" ng-click="vm.readRecords(1)" id="previousPageBtn") 上一页
            button.btn.btn-primary.btn-sm(type="button"  ng-click="vm.readRecords(2)" id="nextPageBtn") 下一页
            button.btn.btn-primary.btn-sm(type="button"  ng-click="vm.readRecords(3)" id="lastPageBtn") 末页