.panel.panel-default.container-fluid(ng-controller="UserPayController as vm")
    .panel-heading 用户充值消费
    .panel-body
        //.selectedBox.row(id="topSearchForm")
        //    .form-horizontal.col-md-2
        //        input.form-control(id="vehicles" type="text" placeholder="请输入车牌号" ng-model="vm.vehicles")
        //    .form-group.form-horizontal.col-md-2
        //        button.btn.btn-primary.btn-sm(ng-click="vm.loadFistPage()") 搜索
        //        button.btn.btn-sm.btn-danger(type="button" ng-click="vm.clearAndRefresh()" ng-disabled="vm.phone_number == '' && vm.vehicles ==''") 重置
        table.row-bordered.hover.table-striped.table-responsive(datatable="ng" dt-options="vm.dtOptions" dt-column-defs="vm.dtColumnDefs")
            thead
                tr
                    th 序号
                    th 交易类型
                    th 停车场名称
                    th 交易金额(元)
                    th 支付状态
                    th 支付方式
                    th 订单号
                    th 流水号
                    th 余额(元)
                    th 地址
                    th 车牌号
                    th 进场时间
                    th 出场时间
            tbody
                tr(ng-repeat="mobileUserDate in vm.mobileUserDate track by mobileUserDate.id")
                    td {{:: mobileUserDate.id }}
                    td {{:: mobileUserDate.order_desc }}
                    td {{:: mobileUserDate.parklot }}
                    td {{:: mobileUserDate.amount/100}}
                    td
                        span(ng-show="{{:: mobileUserDate.paid}}") 已支付
                        span(ng-hide="{{:: mobileUserDate.paid}}") 未支付
                    td {{:: mobileUserDate.payment_channelName}}
                    td {{:: mobileUserDate.thirdpay_trade_no }}
                    td {{:: mobileUserDate.out_trade_no }}
                    td {{:: mobileUserDate.balance/100 }}
                    td {{:: mobileUserDate.address }}
                    td {{:: mobileUserDate.plate_number}}
                    td {{:: mobileUserDate.in_time }}
                    td {{:: mobileUserDate.out_time }}
        //.ui-grid-next
        //    button.btn.btn-primary.btn-sm(type="button" ng-click="vm.loadFistPage()" id="firstPageBtn") 首页
        //    button.btn.btn-primary.btn-sm(type="button" ng-click="vm.loadPreviousPage()" id="previousPageBtn") 上一页
        //    button.btn.btn-primary.btn-sm(type="button"  ng-click="vm.loadNextPage()" id="nextPageBtn") 下一页
        //    button.btn.btn-primary.btn-sm(type="button"  ng-click="vm.loadLastPage()" id="lastPageBtn") 末页
    .panel-footer
        button.btn.btn-danger(type="button" ng-click= "vm.backToPrevious()") 返回上一级菜单
